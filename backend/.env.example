# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/school_bbd
MONGODB_USERNAME=your_username
MONGODB_PASSWORD=your_password
MONGODB_CLUSTER=your_cluster_name

# Server Configuration
PORT=5000
NODE_ENV=development

# Security (Generate strong secrets for production)
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_refresh_secret_key_here

# Frontend URL for CORS (development)
FRONTEND_URL=http://localhost:5177

# Optional Flags
E2E_MODE=false
ENABLE_CSRF=false

# Optional: Email Configuration (for contact forms)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your_email@gmail.com
# EMAIL_PASS=your_app_password
# EMAIL_FROM="BBD School" <noreply@bbd.edu.in>
# EMAIL_SERVICE=gmail